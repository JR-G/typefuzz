{
  "name": "typefuzz",
  "version": "0.2.2",
  "author": "JR-G",
  "type": "module",
  "description": "TypeScript fuzz/property testing utilities with test runner integrations",
  "keywords": [
    "fuzz",
    "property-based",
    "testing",
    "vitest",
    "jest",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JR-G/typefuzz"
  },
  "bugs": {
    "url": "https://github.com/JR-G/typefuzz/issues"
  },
  "homepage": "https://github.com/JR-G/typefuzz#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod.d.ts",
      "default": "./dist/zod.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "default": "./dist/vitest.js"
    },
    "./jest": {
      "types": "./dist/jest.d.ts",
      "default": "./dist/jest.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20",
    "bun": ">=1.3.0"
  },
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "dev": "bunx tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "prepack": "bun run build",
    "test": "bunx vitest run",
    "release": "bash scripts/release.sh",
    "release:tag": "bash scripts/release-tag.sh"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "lefthook": "^2.1.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "zod": "4"
  },
  "peerDependencies": {
    "vitest": ">=2.0.0",
    "jest": ">=29.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
